						{
							"type": "Query",
							"text": "-- 1. LIMPIEZA DE DIMENSIONES (Truncate)\nTRUNCATE TABLE golden.dim_product;\nTRUNCATE TABLE golden.dim_store;\n\n-- 2. CARGA DE DIMENSIÓN PRODUCTOS (Denormalizada)\nINSERT INTO golden.dim_product (product_id, product_name, category_id, category_name, launch_date, price)\nSELECT DISTINCT \n    p.product_id,\n    p.product_name,\n    p.category_id,\n    ISNULL(c.category_name, 'Sin Categoría') AS category_name,\n    p.launch_date,\n    p.price\nFROM silver.products p\nLEFT JOIN silver.category c ON p.category_id = c.category_id;\n\n-- 3. CARGA DE DIMENSIÓN TIENDAS\nINSERT INTO golden.dim_store (store_id, store_name, city, country, opened_date)\nSELECT DISTINCT \n    store_id,\n    store_name,\n    city,\n    country,\n    opened_date\nFROM silver.stores;"
						}
