{
	"name": "df_golden_fact_sales",
	"properties": {
		"folder": {
			"name": "Gold"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sql_silver_sales",
						"type": "DatasetReference"
					},
					"name": "sales"
				},
				{
					"dataset": {
						"referenceName": "ds_golden_dim_producto",
						"type": "DatasetReference"
					},
					"name": "producto"
				},
				{
					"dataset": {
						"referenceName": "ds_golden_dim_store",
						"type": "DatasetReference"
					},
					"name": "store"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_golden_fact_sales",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join1"
				},
				{
					"name": "join2"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          sales_id as string,",
				"          sales_date as date,",
				"          store_id as string,",
				"          product_id as string,",
				"          quantity as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sales",
				"source(output(",
				"          product_key as integer,",
				"          product_id as string,",
				"          product_name as string,",
				"          category_id as string,",
				"          launch_date as date,",
				"          price as decimal(10,2)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT DISTINCT \\n    product_key,\\n    product_id, \\n    product_name, \\n    category_id, \\n    launch_date, \\n    price \\nFROM golden.dim_product',",
				"     format: 'query') ~> producto",
				"source(output(",
				"          store_key as integer,",
				"          store_id as string,",
				"          store_name as string,",
				"          city as string,",
				"          country as string,",
				"          opened_date as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT DISTINCT \\n    store_key,\\n    store_id, \\n    store_name, \\n    city, \\n    country, \\n    opened_date\\nFROM golden.dim_store',",
				"     format: 'query') ~> store",
				"sales, producto join(sales@product_id == producto@product_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1, store join(sales@store_id == store@store_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2",
				"join2 derive(total_amount = iifNull(quantity * price, 0.00)) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          sales_id,",
				"          sales_date,",
				"          quantity,",
				"          total_amount,",
				"          product_key,",
				"          store_key",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          sales_id as string,",
				"          sales_date as date,",
				"          store_key as integer,",
				"          product_key as integer,",
				"          quantity as integer,",
				"          total_amount as decimal(12,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          sales_id,",
				"          sales_date,",
				"          store_key,",
				"          product_key,",
				"          quantity,",
				"          total_amount",
				"     )) ~> sink1"
			]
		}
	}
}